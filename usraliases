# ~~~ VIM STYLE COMMANDS ~~~
alias :q=exit
alias :r='usrconf -r' # reinit usrconf
alias :R=':r'
alias :E=':e'

# ~~~ FAST ACCESS ~~~
# Fast access to usb sticks
alias cdusb='cd /media/ekzyis/ && ls'
# Desktop variable
export desk=~/Schreibtisch
# Fast access to bash configuration
alias bashconf='vim ~/.bashrc'
# Fast access to home
alias cdh='cd ~'
# ~~~ FAST ACCESS to ESSENTIAL COMMANDS ~~~
alias 1=cd
alias 2=ls

# copy dir to path
alias cpdir='cp -r'

# Standard opener for files
alias o='xdg-open 2> /dev/null'

alias pgadmin4='~/pgadmin4/pgadmin4'

# alias for showing files after cd
alias cdls='cdls() { cd "$1" && ls; }; cdls'
