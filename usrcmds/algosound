# Algosound project 
algopath=~/algosound
algosound() {
    # check if algosound dir exists - if not, exit
    if [ ! -f $algopath ]; then
        echo "$algopath does not exist"
        echo "Exiting."
        return
    fi
    path=$algopath
    branch="master"
    # reset opt index
    OPTIND=1
    while getopts p opt
    do
       case $opt in
          p)  path=$algopath/src/supercollider/py.scinit && branch="python";
              SUBL=`pgrep -x subl`
              if [ "${SUBL-null}" = null ]; then
                # open scinit.py with sublime in background with no shell output
                ( subl $path/scinit.py & ) > /dev/null 2>&1
              fi
              ;;
       esac
    done
    cd $path && git checkout $branch -q
    git fetch && git status && git slog -5
    CHR=`pgrep -x chromium-browse`
    if [ "${CHR-null}" = null ]; then
      # open tabs (google and github) with chromium in background with no shell output
      chromium https//github.com/ekzyis/algosound && chromium https//google.com
    fi
}
alias algo=algosound

